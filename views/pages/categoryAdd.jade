extends ../layout
block content
	.container
		.row
			.col-md-12
				form.form-horizontal(method="post",action="/weintern/job/category/save")
					if category._id
						input(type="hidden", name="category[_id]", value="#{category._id}")
					.form-group
						label.col-sm-2.control-label(for="inputCategory") 岗位分类
						.col-sm-10
							input#inputCategory.form-control(type="text",name="category[name]",value=category.name)
					.form-group
						.col-sm-offset-2.col-sm-2
							button.btn.btn-success(type="submit") 保存
						.col-sm-offset-11
							a(href="/")
								button.btn.btn-primary(type="button") 返回首页