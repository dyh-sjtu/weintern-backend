extends ../layout
block content
	.container
		.row
			.col-md-12
				.panel.panel-default
					.panel-heading
						h3
							span 搜索
							span(style="color:red;")=keywords
							span 的结果
							span 共#{number}条
					.panel-body
						if jobs
							.row
								each item,index in jobs
									.col-md-3
										.thumbnail
											a(href="/weintern/job/detail/" + item._id)
												img(src="/uploads/#{item.image}", alt="#{item.company}", style="height:350px;")
											.caption
												span.weintern-font-larger.weintern-black-deeper #{item.company}
												span.weintern-font-larger.weintern-black-deeper.pull-right #{item.jobname}
												if item.salary != "不限"
													h5.weintern-gray-normal ￥#{item.salary}元/天 | #{item.internWeek}天/周 | #{item.interMonth}个月 |
														if item.canBeRegular
														|  可转正
												else
													h5.weintern-gray-normal 薪资#{item.salary} | #{item.internWeek}天/周 | #{item.interMonth}个月 |
														if item.canBeRegular
														|  可转正
												a.btn.btn-primary(href="/weintern/job/detail/#{item._id}", role="button") 查看岗位详情
						if categories
							.row
								each cat in categories
									each item in cat.jobs
										.col-md-3
											.thumbnail
												a(href="/weintern/job/detail/#{item._id}")
													img(src="/uploads/#{item.image}", alt="#{item.company}", style="height:350px;")
												.caption
													span.weintern-font-larger.weintern-black-deeper #{item.company}
													span.weintern-font-larger.weintern-black-deeper.pull-right #{item.jobname}
													if item.salary != "不限"
														h5.weintern-gray-normal ￥#{item.salary}元/天 | #{item.internWeek}天/周 | #{item.interMonth}个月 |
															if item.canBeRegular
															|  可转正
													else
														h5.weintern-gray-normal 薪资#{item.salary} | #{item.internWeek}天/周 | #{item.interMonth}个月 |
															if item.canBeRegular
															|  可转正
													a.btn.btn-primary(href="/weintern/job/detail/#{item._id}", role="button") 查看岗位详情
							.row
								.col-sm-2.col-sm-offset-10
									a(href="/")
										button.btn.btn-primary(type="button") 返回首页
