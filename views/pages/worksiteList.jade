				$.ajax({
					type: 'DELETE',
					url: '/weintern/job/worksite/del' + "?id=" + worksiteId
				}).done(function (res) {
					if (res.success == 1) {
						if (tr.length > 0) {
							tr.remove();
						}
					}
				})
			}
			$("#del-modal").modal('hide');
		})