.container
	.row
		.col-md-2
			h3(style="margin-top:15px;") #{title}
		if title=="首页"
			.col-md-2
				span.btn-group.pull-right(style="margin-top:10px")
					button.btn.btn-success.dropdown-toggle(type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") 类型划分
						span.caret
						span.sr-only
					ul.dropdown-menu
						li
							a(href="?type=category") 按岗位类型
						li
							a(href="?type=worksite") 按工作地点
		if title=="首页"
			.col-md-4
				form#form-search(action="/weintern/search",method="get")
					.input-group(style="padding-top:10px")
						input.form-control(type="text",name="query",placeholder="输入关键字搜索")
						span.input-group-btn
							button.btn.btn-success(type="submit") 点击搜索
		.col-md-4.pull-right
			if user
				h5.text-right(style="display:flex;align-items:center")
					span.weintern-font-larger(style="white-space:nowrap") 欢迎您，
					a.weintern-font-large(href="/weintern/user/center?userId=#{user._id}",style="color:#337ab7;font-style:normal;margin-right:10px;white-space: nowrap;text-overflow: ellipsis;overflow: hidden;") &nbsp;#{user.name}
					span.dropdown(style="display: inline-block;")
						button.btn.btn-primary.dropdown-toggle(id="dLable",type="button",data-toggle="dropdown",aria-haspopup="true",aria-expanded="false") 后台管理
							span.caret
						ul(class="dropdown-menu",aria-labelledby="dLable")
							li
								a(href="/weintern/job/list") 岗位列表
							li
								a(href="/weintern/job/add") 岗位录入
							li
								a(href="/weintern/job/category/list") 岗位分类
							li
								a(href="/weintern/job/category/add") 新增岗位分类
							li
								a(href="/weintern/job/worksite/list") 工作地点分类
							li
								a(href="/weintern/job/worksite/add") 新增工作地点分类
							li
								a(href="/weintern/user/list") 用户列表
							li
								a(href="/") 返回首页
					a.btn.btn-danger(href="/weintern/loginout",style="display:inline; margin-left:10px;") 注销
			else
				h5.text-right(style="margin-top: 10px")
				a(href="/",class="btn btn-primary pull-right",style="margin:0 0 10px 10px",data-toggle="modal",data-target="#signin-modal") 登录
				a(href="/",class="btn btn-success pull-right",data-toggle="modal",data-target="#signup-modal") 注册
	hr(style="margin:10px 0;margin-top:0;border-color:#d9d9d9")
#signin-modal.modal.fade
	.modal-dialog
		.modal-container(style="background:#fff;border-radius: 6px;-webkit-box-shadow: 0 3px 7px rgba(0, 0, 0, 0.3);")
			form(method="POST",action="/weintern/user/signIn")
				.modal-header
					h4.modal-title 登录
				.modal-body
					.form-group
						label(for="signinName") 账户：
						input#signinName.form-control(type="text", placeholder="请输入您的邮箱或者姓名",name="user[name]")
					.form-group
						label(for="signPassword") 密码：
						input#signPassword.form-control(type="password", placeholder="请输入密码",name="user[password]")
				.modal-footer
					button.btn.btn-default(type="button",data-dismiss="modal") 取消
					button.btn.btn-success(type="submit") 提交

#signup-modal.modal.fade
	.modal-dialog
		.modal-container(style="background:#fff;border-radius: 6px;-webkit-box-shadow: 0 3px 7px rgba(0, 0, 0, 0.3);")
			form(method="POST",action="/weintern/user/signUp")
				.modal-header
					h4.modal-title 注册
				.modal-body
					.form-group
						label(for="signupName") 账户：
						input#signupName.form-control(type="text", placeholder="请输入您的邮箱或姓名",name="user[name]")
					.form-group
						label(for="signupPassword") 密码：
						input#signupPassword.form-control(type="password", placeholder="请输入您的密码",name="user[password]")
				.modal-footer
					button.btn.btn-default(type="button",data-dismiss="modal") 取消
					button.btn.btn-success(type="submit") 提交